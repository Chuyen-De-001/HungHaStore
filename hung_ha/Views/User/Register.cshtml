@using hung_ha.Models.Form
@model RegisterForm
@{
    ViewBag.Title = "Đăng kí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main_content">
    <!-- START LOGIN SECTION -->
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Đăng kí</h3>
                            </div>
                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(model=>model.username, new { @class= "form-control",@name= "username", @required="", @placeholder="Nhập tài khoản." })
                                    @Html.ValidationMessageFor(model=>model.username)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control", @type = "email", @required = "", @name = "email", @placeholder = "Nhập email." })
                                    @Html.ValidationMessageFor(model => model.email)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.password, new { @class = "form-control", @type = "password", @required = "", @name = "password", @placeholder = "Nhập mật khẩu" })
                                    @Html.ValidationMessageFor(model => model.password)
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-fill-out btn-block" name="register">Đăng kí</button>
                                </div>
                            }
                            <div class="form-note text-center">Nếu bạn đã có tài khoản, thì đăng nhập <a href="#">tại đây.</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

