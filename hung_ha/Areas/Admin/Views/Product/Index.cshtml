@using PagedList.Mvc
@model PagedList.IPagedList<hung_ha.Models.DbSet.tblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Create_id
        </th>
        <th>
            Descr
        </th>
        <th>
            Price
        </th>
        <th>
            Created_at
        </th>
        <th>
            Img
        </th>
        <th>
            View
        </th>
        <th>
            Sale
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.created_at)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.views)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sale)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>
<div class="row">
    <div class="col">
        <div class="pagination justify-content-md-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", "Admin/Product", new { page = ViewBag.Page, search = ViewBag.Search, pageSize = ViewBag.PageSize }))
        </div>
    </div>
</div>
